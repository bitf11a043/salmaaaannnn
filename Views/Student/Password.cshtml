    <script type="text/javascript">
    </script>
</head>
<body>
<div class="extra">
        <div class="content-bg">
                <div class="main">
                    <div class="container_12">
                        <div class="wrapper">
                        	<article class="grid_8">
                            	<h3>Change Password</h3>
                                 @using (Html.BeginForm("Change", "Student", FormMethod.Post, new { Class = "password-form2" }))
                                     {
                                        <table>
                                         <tr><td>
                                         @Html.Label("Old Password",new {@class="text-form"})
                                         @Html.PasswordFor(m => m.password,new {@class="text-form"})
                                         @Html.ValidationMessageFor(m => m.password)
                                           </td> </tr>
                                             <tr><td>
                                         @Html.Label("New Password",new {@class="text-form"})
                                         @Html.PasswordFor(m => m.newpassword,new {@class="text-form"})
                                         @Html.ValidationMessageFor(m => m.newpassword)
                                           </td> </tr>
                                                          <tr><td>
                                         @Html.Label("Confirm Password",new {@class="text-form"})
                                         @Html.PasswordFor(m => m.confirmpassword,new {@class="text-form"})
                                         @Html.ValidationMessageFor(m => m.confirmpassword)
                                           </td> </tr>
                                            </table>
                                         <div class="buttons2">
                                         <input type="submit" name="submit" value="Change" />
                                        </div>      
                                    
                                 }
                            </article>                           
                        </div>
                    </div>
                </div>
                <!--><div class="block"></div><-->
            </div>
    </div> 
    @Scripts.Render("~/bundles/jqueryval")
