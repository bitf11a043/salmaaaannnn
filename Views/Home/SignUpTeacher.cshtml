      <script>
          $(document).ready(function () {
              $('#checking').hide();
          });
          function check() {
              $('#checking').show();

              var username = $('#username').val();

              $.getJSON("/Home/CheckUserName?username=" + username, function (data) {

                  if (data) {
                      $("#result").text("USER NAME IS NOT AVAILABLE");

                  }
                  else {
                      $("#result").text("USER NAME IS AVAILABLE");

                  }
              });

          }

          
    </script>
        <div class="content-bg">
