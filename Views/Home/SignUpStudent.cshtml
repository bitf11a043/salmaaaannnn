                                          </td></tr>   
                                         
                                             <tr><td>
                                         @Html.Label("Teacher ID",new {@class="text-form"})
                                         @Html.EditorFor(m => m.TId,"",new {@class="text-form"})
                                         @Html.ValidationMessageFor(m => m.TId,"")
                                                 </td></tr>
                                          </table>   
                                         
                                         <label><span >Male</span><input type="radio" name="gen" checked="checked" value="Male" /></label>
                                         <label><span >Female</span><input type="radio" name="gen" value="Female" /></label> 
                                         
                                          
