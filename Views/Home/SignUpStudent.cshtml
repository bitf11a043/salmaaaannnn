      <script>
          $(document).ready(function () {
              $('#checking').hide();
          });

          function check() {
              $('#checking').show();

              var username = $('#username').val();

              $.getJSON("/Home/CheckUserName?username=" + username, function (data) {

                  if (data) {
                      $("#result").text("USER NAME IS NOT AVAILABLE");

                  }
                  else {
                      $("#result").text("USER NAME IS AVAILABLE");

                  }
              });

          }


    </script>
 <div class="content-bg">
                <div class="main">
                    <div class="container_12">
                        <div class="wrapper">
                        	<article class="grid_8">
                            	<h3>SignUp Form</h3>
                                <div id="checking" ></div>
                                    
                                    <div id="result"></div>
                                    
                                <!--<form id="signUp-form2" method="post" enctype="multipart/form-data" action="../Home/Register"> -->
                                     @using (Html.BeginForm("RegisterStudent", "Home", FormMethod.Post, new { Class = "signup-form2" }))
                                     {
                                         <table>
                                             <tr><td>
                                         @Html.Label("Name",new {@class="text-form"})
                                         @Html.EditorFor(m => m.name,"",new {@class="text-form"})
                                         @Html.ValidationMessageFor(m => m.name,"")
                                        </td></tr>
                                         
                                         <tr><td>
                                         @Html.Label("User Name",new {@class="text-form"})
                                         @Html.EditorFor(m => m.username,"",new {@class="text-form"})
                                         @Html.ValidationMessageFor(m => m.username)
                                          </td></tr> 
                                              <tr><td>
                                          <input type="button" id="Check" onclick="check()" name="Check" value="Check" />  
                                         </td></tr> 
                                         
                                        <tr><td>
                                         @Html.Label("Email ID",new {@class="text-form"})
                                         @Html.EditorFor(m => m.email,"",new {@class="text-form"})
                                         @Html.ValidationMessageFor(m => m.email,"")
                                          </td></tr> 
                                        
                                         <tr><td>
                                         @Html.Label("Date of Birth",new {@class="text-form"})
                                         @Html.EditorFor(m => m.dob,"",new {@class="text-form"})
                                         @Html.ValidationMessageFor(m => m.dob,"")
                                             </td></tr>
                                         
                                             <tr><td>                                      
                                         @Html.Label("Password",new {@class="text-form"})
                                         @Html.PasswordFor(m => m.password)
                                         @Html.ValidationMessageFor(m => m.password,"")
